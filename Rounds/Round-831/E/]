#include "bits/stdc++.h"

#ifdef local
#include "custom/debugger.h"
#else
#define debug(...) 42;
#endif

using namespace std;
#define int long long

int dfs(int node, vector<vector<int>>& adj) {
    int retval = 0;
    if ((int)adj[node].size() <= 1) {
        retval = 1;
    }
    for (auto x : adj[node]) {
        retval += dfs(x, adj);
    }
    return retval;
}

void solve([[maybe_unused]] int test) {
    int n;
    scanf("%lld", &n);
    vector<int> p(n);
    p[0] = -1;
    vector<vector<int>> adj(n);
    for (int i = 1; i < n; i++) {
        scanf("%lld", &p[i]);
        p[i]--;
        adj[p[i]].push_back(i);
    }
    printf("%lld\n", dfs(0, adj));
}

int32_t main() {
    int t = 1;
    // cin >> t;
    for (int tt = 1; tt <= t; tt++) {
        solve(tt);
    }
}
